{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "foreground": "lightMagenta",
          "properties": {
            "style": "full",
            "template": "{{ .Path }} "
          },
          "style": "plain",
          "type": "path"
        },
        {
          "foreground": "lightRed",
          "properties": {
            "fetch_status": true,
            "branch_icon": "",
            "fetch_upstream_icon": true,
            "template": "<lightBlue>git:(</>{{ .HEAD }}<lightBlue>)</>{{ if .Working.Changed }} 署 {{ .Working.String}} {{ else }} <lightGreen></> {{ end }}"
          },
          "style": "plain",
          "type": "git"
        },
        {
          "type": "root",
          "style": "plain",
          "foreground": "lightYellow",
          "properties": {
            "root_icon": "root"
          }
        },
        {
          "type": "exit",
          "style": "plain",
          "foreground": "lightRed",
          "properties": {
            "prefix": " "
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#FFFFFF",
          "properties": {
            "template": "-> "
          },
          "style": "plain",
          "type": "text"
        }
      ]
    }
  ],
  "version": 1
}
