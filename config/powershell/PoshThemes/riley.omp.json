{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "plain",
          "foreground": "lightMagenta",
          "properties": {
            "prefix": "",
            "style": "full"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "lightBlue",
          "properties": {
              "display_status": true,
              "status_colors_enabled": false
          }
        },
        {
          "type": "root",
          "style": "plain",
          "foreground": "lightYellow",
          "properties": {
            "root_icon": "root"
          }
        },
        {
          "type": "exit",
          "style": "plain",
          "foreground": "lightRed",
          "properties": {
            "prefix": " "
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#FFFFFF",
          "properties": {
            "prefix": "",
            "text": "->"
          },
          "style": "plain",
          "type": "text"
        }
      ]
    }
  ],
  "final_space": false
}
